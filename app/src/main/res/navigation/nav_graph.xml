<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/albumListFragment">

    <!-- app:startDestination="@id/albumListFragment"> -->

    <!-- app:startDestination="@id/collectorFragment"> -->
    <fragment
        android:id="@+id/collectorFragment"
        android:name="com.example.vinyls_jetpack_application.ui.CollectorFragment"
        android:label="collector_fragment"
        tools:layout="@layout/collector_fragment" >
        <action
            android:id="@+id/action_collectorFragment_to_albumFragment"
            app:destination="@id/albumListFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumListFragment"
        android:name="com.example.vinyls_jetpack_application.ui.AlbumListFragment"
        android:label="Albums"
        tools:layout="@layout/album_list_fragment" >
        <action
            android:id="@+id/action_albumListFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/commentFragment"
        android:name="com.example.vinyls_jetpack_application.ui.CommentFragment"
        android:label="comment_fragment"
        tools:layout="@layout/comment_fragment" >
        <argument
            android:name="albumId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.example.vinyls_jetpack_application.ui.AlbumDetailFragment"
        android:label="album_detail_item"
        tools:layout="@layout/album_detail_item" >
        <argument
            android:name="albumId"
            app:argType="integer" />
        <action
            android:id="@+id/action_albumDetailFragment_to_commentFragment2"
            app:destination="@id/commentFragment" />
    </fragment>
    <fragment
        android:id="@+id/artistListFragment"
        android:name="com.example.vinyls_jetpack_application.ui.ArtistListFragment"
        android:label="ArtistListFragment" />
</navigation>